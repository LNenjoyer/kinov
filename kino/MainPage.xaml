        <Button Text="18:00" BackgroundColor="Gray" Grid.Column="3" Grid.Row="0" />
        <Label Text="Kup bilet!" Grid.Column="4" Grid.Row="0" />
        <Button Text="17 zł" BackgroundColor="Green" Grid.Column="4" Grid.Row="1" Clicked="kup"/>
        <Image Source="koszyk.png" Grid.Column="6" Grid.Row="0" />
        <Label Text="" x:Name="wynik" Grid.Column="7" Grid.Row="0"/>

        <Image Source="film2.png" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2"/>
        <Label Text="Film2!" Grid.Column="1" Grid.Row="2" FontSize="Header"/>
