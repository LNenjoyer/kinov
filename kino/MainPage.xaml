<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kino.MainPage">

    <Grid ColumnDefinitions="100,500,100,100,100,200,*,*"
          RowDefinitions="75,75,75,75,75,75,75,75"
          RowSpacing="10"
          ColumnSpacing="10"
          
          >
        <Image Source="film1.png" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
