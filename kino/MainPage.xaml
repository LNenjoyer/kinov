        <Button Text="20:00" BackgroundColor="Gray" Grid.Column="2" Grid.Row="2" />
        <Button Text="18:00" BackgroundColor="Gray" Grid.Column="3" Grid.Row="2" />
        <Label Text="Kup bilet!" Grid.Column="4" Grid.Row="2" />
        <Button Text="17 zł" BackgroundColor="Green" Grid.Column="4" Grid.Row="3" Clicked="kup"/>

        <Image Source="film3.png" Grid.Column="0" Grid.Row="4" Grid.RowSpan="2"/>
        <Label Text="Film3!" Grid.Column="1" Grid.Row="4" FontSize="Header"/>
        <Label Text="Opis filmu film3! UuuuuuuuUUUUuu!"  Grid.Column="1" Grid.Row="5"/>
        <Button Text="20:00" BackgroundColor="Gray" Grid.Column="2" Grid.Row="4" />
        <Button Text="18:00" BackgroundColor="Gray" Grid.Column="3" Grid.Row="4" />
        <Label Text="Kup bilet!" Grid.Column="4" Grid.Row="4" />
        <Button Text="17 zł" BackgroundColor="Green" Grid.Column="4" Grid.Row="5" Clicked="kup"/>

        <Image Source="film4.png" Grid.Column="0" Grid.Row="6" Grid.RowSpan="2"/>
        <Label Text="Film4!" Grid.Column="1" Grid.Row="6" FontSize="Header"/>
        <Label Text="Opis filmu film4! abjdgashghasghk!"  Grid.Column="1" Grid.Row="7"/>
        <Button Text="20:00" BackgroundColor="Gray" Grid.Column="2" Grid.Row="6" />
        <Button Text="18:00" BackgroundColor="Gray" Grid.Column="3" Grid.Row="6" />
        <Label Text="Kup bilet!" Grid.Column="4" Grid.Row="6" />
        <Button Text="17 zł" BackgroundColor="Green" Grid.Column="4" Grid.Row="7" Clicked="kup"/>

    </Grid>

</ContentPage>
